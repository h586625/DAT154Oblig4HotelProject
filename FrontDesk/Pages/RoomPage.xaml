<Page x:Class="FrontDesk.RoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrontDesk"
      mc:Ignorable="d" 
      d:DesignWidth="1024" d:DesignHeight="768"
      Title="Room">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1"  Text="Scandic Hotel"
                   FontSize="20" Margin="0,0,10,40"/>
        <TextBlock Grid.Column="1" Grid.Row="3"  Text="Room Information" FontWeight="Bold"
                   Grid.ColumnSpan="2"/>
        <TextBlock Name ="Roomnr"  Grid.Column="1" Grid.Row="4"  Text="Roomnr: "
                   Grid.ColumnSpan="2"/>
        <TextBlock Name="Beds" Grid.Column="1" Grid.Row="5"  Text="Beds: "
                   Grid.ColumnSpan="2"/>
        <TextBlock Name="Size" Grid.Column="1" Grid.Row="6"  Text="Size: "
                   Grid.ColumnSpan="2"/>
        <TextBlock Name="Price" Grid.Column="1" Grid.Row="7"  Text="Price: "
                   Grid.ColumnSpan="2"/>
        <TextBlock Name="Available" Grid.Column="1" Grid.Row="8"  Text="Available: "
                   Grid.ColumnSpan="2"/>
        <TextBlock Name="InOrder" Grid.Column="1" Grid.Row="9"  Text="In order: "
                   Grid.ColumnSpan="2"/>

        <TextBlock Grid.Column="2" Grid.Row="2"  Text="Add task"/>
        <TextBlock Grid.Column="3" Grid.Row="2"  Text="Notes: "/>
        <TextBox x:Name="AddNotes" Grid.Column="3" Grid.Row="3" Width="120"/>
        <TextBlock Grid.Column="4" Grid.Row="2"  Text="Info: "/>
        <TextBox x:Name="AddInfo" Grid.Column="4" Grid.Row="3" Width="120"/>
        <TextBlock Text="Task type" Grid.Column="5" Grid.Row="2"/>
        <ComboBox Text="Task type" Name="TaskType" Grid.Column="5" Grid.Row="3">
            <ComboBoxItem Content="Service"/>
            <ComboBoxItem Content="Maintenance"/>
        </ComboBox>
        <TextBlock Text="State" Grid.Column="6" Grid.Row="2"/>
        <ComboBox Text="State" Name="TaskState" Grid.Column="6" Grid.Row="3">
            <ComboBoxItem Content="Not Started"/>
            <ComboBoxItem Content="Finished"/>
        </ComboBox>

        <Label Name="TTNS" Content="No task type selected" Grid.Row="1" Grid.Column="5" Visibility="Hidden" Grid.ColumnSpan="2" />


        <ListView Name="tasksList" ItemsSource="{Binding}" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="3" Grid.RowSpan="10" MouseDoubleClick="TaskList_OnMouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Width="100" Header="Cleaned" DisplayMemberBinding="{Binding Path=Cleaned}"></GridViewColumn>
                        <GridViewColumn Width="100" Header="Serviced" DisplayMemberBinding="{Binding Path=Serviced}"></GridViewColumn>
                        <GridViewColumn Width="100" Header="Maintained" DisplayMemberBinding="{Binding Path=Maintained}"></GridViewColumn>
                        <GridViewColumn Width="100" Header="Notes" DisplayMemberBinding="{Binding Path=Notes}"></GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Submit" Content="Submit" Click="Submit_Click" Grid.Column="7" Grid.Row="3"/>
    </Grid>
</Page>
