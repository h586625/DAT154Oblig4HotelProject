<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Todo[0].Cleaned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Todo[0].Maintained)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Todo[0].Serviced)
            </th>
